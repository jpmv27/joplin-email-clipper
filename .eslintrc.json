{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "ChromeUtils": "readwrite",
    "Components": "readwrite",
    "FileUtils": "readwrite",
    "gMessageDisplay": "readwrite",
    "jsmime" : "readwrite",
    "messenger" : "readwrite",
    "MsgHdrToMimeMessage": "readwrite"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": ["error", { "allow": ["error", "info"] }],
    "strict": ["error", "global"]
  }
}
